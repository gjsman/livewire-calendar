{
    "name": "gjsman/livewire-calendar",
    "description": "Laravel Livewire calendar component",
    "keywords": [
        "asantibanez",
        "tamsinrose",
        "livewire-calendar"
    ],
    "homepage": "https://github.com/gjsman/livewire-calendar",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Andrés Santibáñez",
            "email": "santibanez.andres@gmail.com",
            "role": "Developer"
        },
        {
            "name": "Tamsin Rose",
            "email": "tamsin.rose@outlook.com",
            "role": "Developer"
        },
        {
            "name": "Gabriel Sieben",
            "email": "gsieben@homeschoolconnections.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1|^8.2",
        "illuminate/support": "^9.0|^10.0",
        "livewire/livewire": "^3.0"
    },
    "require-dev": {
        "orchestra/testbench": "^5.0|^6.0",
        "phpunit/phpunit": "^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "Tamsinrose\\LivewireCalendar\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tamsinrose\\LivewireCalendar\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Tamsinrose\\LivewireCalendar\\LivewireCalendarServiceProvider"
            ],
            "aliases": {
                "LivewireCalendar": "Tamsinrose\\LivewireCalendar\\LivewireCalendarFacade"
            }
        }
    }
}
